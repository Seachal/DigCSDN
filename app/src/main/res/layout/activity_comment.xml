<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <include layout="@layout/slistview"></include>
    </RelativeLayout>

    <include layout="@layout/custom_progress"/>

    <LinearLayout
        android:id="@+id/ll_comment_reLoad"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="invisible"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\t\t\t网络出问题啦\n请仔细检查网络连接喔"
            />
        <Button
            android:id="@+id/bt_comment_reLoad"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重试"
            android:textAppearance="@style/text_button"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>

</RelativeLayout>
